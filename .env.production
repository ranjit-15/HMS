# Hive - InfinityFree Production Environment
# Rename this file to .env on your server

APP_NAME="Hive"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://hive.page.gd

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging - Only errors in production
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration - InfinityFree
DB_CONNECTION=mysql
DB_HOST=sql306.infinityfree.com
DB_PORT=3306
DB_DATABASE=if0_41016418_hive
DB_USERNAME=if0_41016418
DB_PASSWORD=YJf7AUEJYX

# Session - Use file driver for InfinityFree (more reliable)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue - Use sync for InfinityFree (no cron access)
QUEUE_CONNECTION=sync

# Cache - Use file for free hosting
CACHE_STORE=file

# Mail Configuration - Update with your email settings
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@hive.page.gd"
MAIL_FROM_NAME="Hive"

# Google OAuth - Update with production credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://hive.page.gd/auth/google/callback

